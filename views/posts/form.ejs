<form action="<%= action %>" method="post">
    <div class="form-field">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= locals.post ? post.title : "" %>" required>
    </div>
    <div class="form-field">
        <label for="body">Body</label>
        <textarea name="body" id="body" cols="30" rows="10"><%= locals.post ? post.body : "" %></textarea>
    </div>
    <button class="form-submit-button" type="submit"><%= submitValue %></button>
</form>
